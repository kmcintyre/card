<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nwice.card"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />
    
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@drawable/nwice_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        >        
        <activity
            android:name="com.nwice.card.MainActivity"
            android:label="@string/app_name"                       
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name=".SettingsActivity"
            android:theme="@style/GameTheme"
            ></activity>        
        <activity android:name=".DeckActivity"
            android:theme="@style/GameTheme"            
            ></activity>
        <activity android:name=".WarActivity"
            android:theme="@style/GameTheme"
            ></activity>        
        <activity android:name=".BlackjackActivity"
            android:theme="@style/GameTheme"
            ></activity>        
        <activity android:name=".ConnectActivity"            
            ></activity>
        
        <service 
            android:name="com.nwice.card.ConnectIntentService"
            android:label="@string/connect_service"
            ></service>
        
    </application>

</manifest>
